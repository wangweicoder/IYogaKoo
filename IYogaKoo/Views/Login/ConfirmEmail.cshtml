@section Scripts {   
    <script type="text/javascript">
        function SendEmail() {
            $("#sendButton").val("正在发送......");
            $.get("SendValidateEmail",
                 { uid: $("#huid").val(), email: $("#hemail").val(), nickname: $("#hnickname").val() },
                function (data, status) {
                if (status == "success") {
                    $("#sendButton").val("发送成功!");
                }
                else
                    $("#sendButton").val("发送失败，重新发送!");
            });
        }
    </script>
