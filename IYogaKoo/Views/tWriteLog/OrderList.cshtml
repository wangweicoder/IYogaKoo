@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<IYogaKoo.ViewModel.ViewOrder>
@{
    ViewBag.Title = "OrderList";
}
<script>
    $("tbody tr:even").css('background', '#e7e7e7');
</script>
<div class="content-box-content">
    <div class="tab-content default-tab" id="tab1">
        <table class="data-table" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        姓名
                    </th>
                    <th>
                        手机
                    </th>
                    <th>
                        数量
                    </th>
                    <th>
                        状态
                    </th>
                    <th>
                        总计
                    </th>
                    <th>
                        支付方式
                    </th>
                    <th>
                        创建时间
                    </th>
                    <th>
                        支付时间
                    </th>
                    <th>
                        订单编号
                    </th>
                </tr>
            </thead>


            @{
                var index = 1;
                if (!string.IsNullOrEmpty(Request.QueryString["page"]))
                {
                    var p = int.Parse(Request.QueryString["page"]) - 1;
                    if (p > 0)
                    {
                        index = p * 10 + 1;
                    }
                }
            }
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Phone
                    </td>
                    <td>
                        @item.Number
                    </td>
                    <td>
                        @(item.IsPaid == true ? "已支付" : "未支付")
                    </td>
                    <td>
                        @item.Amount
                    </td>
                    <td>
                        @item.PayDomain
                    </td>
                    <td>
                        @item.CreateTime
                    </td>
                    <td>
                        @item.PayTime
                    </td>
                    <td>
                        @item.PayNO
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


<div style="clear:both"></div>
<div class="text-center" style="" id="menepager">
    @Ajax.Pager(Model, new PagerOptions
{
    PageIndexParameterName = "page",
    ContainerTagName = "ul",
    CssClass = "menepager",
    PrevPageText = "上页",
    NextPageText = "下页",
    FirstPageText = "首页",
    LastPageText = "尾页",
    CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
    DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
    PagerItemTemplate = "<li>{0}</li>"

}, new MvcAjaxOptions { UpdateTargetId = "Content", HttpMethod = "Post", OnComplete = "pagelocation", DataFormId = "searchForm" })
</div>