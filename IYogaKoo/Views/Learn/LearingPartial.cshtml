@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<IYogaKoo.ViewModel.ViewtLearing>
@{
    Layout = null;
}
  
@foreach (var item in Model)
{
        <div class="lb_xxhd_index_div_index">
            <div class="lb_xxhd_div_index">
                <div class="lb_xxhd_index_top">
                    <a href="~/learn/Details/@item.ID"><img src="@item.sPic" /></a>
                </div>
                <div class="lb_xxhd_index_bottom">
                    <p><a href="~/Details/@item.ID">@item.sTitle</a></p>
                    <span>
                        <b>@item.iReadNums</b> 人气  / <b> @item.iWritelogNums </b> 评论
                        <a href="#">@item.iZanNums</a>
                    </span>
                </div>
            </div>
        </div>
}
    
 
<div style="clear:both"></div>
<div style="display:block; width:100%">
    <div class="text-center" style="" id="menepager">
        @Ajax.Pager(Model, new PagerOptions
        {
            PageIndexParameterName = "page",
            PrevPageText = "上一页",
            NextPageText = "下一页",
            FirstPageText = "首页",
            LastPageText = "尾页",
            ContainerTagName = "ul",
            CssClass = "menepager",
            CurrentPagerItemTemplate = "<li class=\"active\"><a  >{0}</a></li>",
            DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
            PagerItemTemplate = "<li>{0}</li>"
        }, new MvcAjaxOptions { UpdateTargetId = "Content", HttpMethod = "Post", OnComplete = "pagelocation", DataFormId = "searchForm" })
    </div>
</div>
 