@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<IYogaKoo.ViewModel.ViewtQuestion>
@{
    ViewBag.Title = "HelpSearchList";
}

<div class="lb_add_index_bz_demo_search">
    <h2>搜到“<a>@ViewBag.QuestionContent</a>”相关的结果，共<a>@ViewBag.ViewtQuestionCount</a>条</h2>
</div>
<div class="lb_search_div">
    @{
        foreach (var item in Model)
        {
            <div class="lb_search_div_index">
                <div class="lb_search_div_index_top">
                    <a href="/tQuestion/FAQDetail?id=@item.ID"> <b>Q</b><span>@item.QuestionContent</span></a>
                </div>
                <div class="lb_search_div_index_bottom">
                    @Html.Raw(item.ReplyContent)
                </div>
            </div>
        }
    }
    
</div>

<div class="text-center" style="" id="menepager">
    @Ajax.Pager(Model, new PagerOptions
{
    PageIndexParameterName = "page",
    ContainerTagName = "ul",
    CssClass = "menepager",
    PrevPageText = "上页",
    NextPageText = "下页",
    FirstPageText = "首页",
    LastPageText = "尾页",
    CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
    DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
    PagerItemTemplate = "<li>{0}</li>"

}, new MvcAjaxOptions { UpdateTargetId = "mydiv", HttpMethod = "Post" })
</div>