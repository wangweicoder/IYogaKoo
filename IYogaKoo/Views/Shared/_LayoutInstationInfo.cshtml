    <script type="text/javascript">
        //瀑布流

        $(document).ready(function () {
            $(".mypic").click(function () {
                var $container = $('#con1_1');
                $container.imagesLoaded(function () {
                    $container.masonry({
                        itemSelector: '.product_list',
                        columnWidth: 5 //每两列之间的间隙为5像素
                    });
                });
            });


        });

        //加关注
        function flowuid(obj) {
            var hhid = $("#hhid").val();
            if (hhid != '' && hhid != 0) {

                $.ajax({
                    url: "/Follow/SetFollow",
                    type: "get",
                    dataType: "text",
                    data: {
                        quertid: obj,
                        isf: $("#flowuid").html().trim(),
                        UserType: '@ViewBag.user.UserType'
                    },
                    success: function (relust, status) {
                        if (status == "success") {
                            if (relust == "1") {

                                $("#flowuid").html("已关注").css('background', '#FF9933');
                            }
                            else if (relust == "0") {

                                $("#flowuid").html("+关注").css('background', '#65C3A5');
                            }
                            else if (relust == "3") {
                                layer.msg("亲自己不需要关注自己的！");
                            }

                        } else {
                            layer.msg("关注失败！");
                        }
                    },
                    async: true,//同步操作，同步请求将锁住浏览器，用户其它操作必须等待请求完成才可以执行
                });

            } else {
                if (confirm("登录后才可以加关注!")) {

                    window.location = "/Login/Login?ReturnUrl=" + '/YogaUser/otherFollowList/' + @ViewBag.id;// 原来窗口
                }

            }

        }
    </script>
        
