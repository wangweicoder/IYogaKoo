@using Webdiyer.WebControls.Mvc
@using IYogaKoo.ViewModel
@model Webdiyer.WebControls.Mvc.PagedList<IYogaKoo.ViewModel.ViewClassDetail>
@{
    ViewBag.Title = "MyClassDetailList";
}

<table cellpadding="0" cellspacing="0">
    <tr>
        <th style="width:50px;">
            <input type="checkbox" name="checkbox" />
        </th>
        <th style="width:130px;">
            开始时间
        </th>
        <th>
            课程名称
        </th>
        <th>
            时长
        </th>
        <th style="width:185px;">
            地点
        </th>
        <th style="width:180px;">
            会馆名称
        </th>
        <th>
            价格
        </th>
        <th>
            编辑
        </th>
    </tr>
    
        @{
            foreach (ViewClassDetail item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="checked" />
                    </td>
                    <td>
                        <p class="p">@item.StartTime.ToString("yyyy年MM月dd日")</p>
                        <p>星期一 14：00</p>
                    </td>
                    <td>
                        HATHA瑜伽
                    </td>
                    <td>70分钟</td>
                    <td>建外SOHO 1号楼二层803</td>
                    <td>Uran瑜伽馆</td>
                    <td>200</td>
                    <td style="border-right:0px">
                        <a>修改</a>
                        <a>删除</a>
                    </td>
                </tr>
            }

        }

</table>

<div style="clear:both"></div>
<div class="text-center" style="" id="menepager">
    @Ajax.Pager(Model, new PagerOptions
{
    PageIndexParameterName = "page",
    ContainerTagName = "ul",
    CssClass = "menepager",
    PrevPageText = "上页",
    NextPageText = "下页",
    FirstPageText = "首页",
    LastPageText = "尾页",
    CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
    DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
    PagerItemTemplate = "<li>{0}</li>"

}, new MvcAjaxOptions { UpdateTargetId = "Content", HttpMethod = "Post", OnComplete = "pagelocation", DataFormId = "searchForm" })
</div>