                                        <img src="~/Content/Front/images/ds.png" />
                                    } if (listGroup.YogisLevel == 5)
                                        {
                                            // @:资深
                                        <img src="~/Content/Front/images/zishengdaoshi.jpg" />
                                        }
                                    if (listGroup.YogisLevel == 6)
