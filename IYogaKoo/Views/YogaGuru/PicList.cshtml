@model List<IYogaKoo.ViewModel.ViewYogaPicture>
@{
    Layout = null;
    var listGroup = ViewBag.listGroup;
    Commons.Helper.method method = new Commons.Helper.method();
    var bl = "";
    if (ViewBag.isfollow == false && ViewBag.user.Uid != ViewBag.strUid)
