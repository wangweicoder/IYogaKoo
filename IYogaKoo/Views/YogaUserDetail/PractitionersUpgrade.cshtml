@{
    ViewBag.Title = "习练者升级";
    Layout = "~/Views/Shared/LayoutSetUpBack.cshtml";
    Commons.Helper.method method = new Commons.Helper.method();
}
 
<div class="lb_login_idnex_bottom">
    <div class="lb_School_index_top">
        <div class="lb_School_index_top_index">
            <b>您所在位置：<a href="/">习练者升级</a></b>
            <ul></ul>
        </div>
    </div>

    <div class="lbb_da">
        <div class="lb_index_update">
            <div class="lb_index_update_duv">
                <p>恭喜您已经通过自我评测达到“@ViewBag.msg”，系统为您找到同级别的习练者与适合您级别的导师，您可以选择同修伙伴及最近最适合自己老师，赶快开始属于你的瑜伽吧。如果您想获得更高级别，可进入社区进行社区页面进行学习，请按确定进入。</p>
            </div>
            <div class="lb_index_update_input">
                <input type="button" id="btnOK" value="确定" />
            </div>
        </div>
    </div>      

    <div class="lb_add_botttom">
        <div class="lb_add_botttom_top" >
            <a style="width:100px;">同级别习练者</a>
        </div>
        @{
                //习练者
                System.Data.DataTable list = ViewBag.list;
                if (list.Rows.Count > 0)
                {
                    for (int i = 0; i < list.Rows.Count; i++)
                    {
                        var ImgPath = method.DisplayImg(list.Rows[i]["DisplayImg"].ToString());
                        var strRealName = list.Rows[i]["RealName_cn"].ToString();

                        if (strRealName.Length > 4)
                        {
                            strRealName = strRealName.Substring(0, 4) + "...";
                        }
                        <div class="lb_add_botttom_bott_img">
                            <a href="/YogaUserDetail/Details/@list.Rows[i]["UID"]">
                                <img src="@ImgPath" />
                            </a>
                            <p><a href="/YogaUserDetail/Details/@list.Rows[i]["UID"]">@strRealName</a></p>
                        </div>

                    }
                }
            
        }
        @*<div class="lb_add_botttom_bott">
            <div class="lb_add_botttom_bott_img">
                <a>
                    <img src="~/Content/Front/images/02000.png" />
                </a>
                <p>随便啦</p>
            </div>
        </div>*@
    
    </div>

    <div class="lb_add_botttom">
        <div class="lb_add_botttom_top lb_add_botttom_top2">
            <a>同级别老师</a>
        </div>
        <div class="lb_add_botttom_bott lb_add_botttom_bott">
            @{
                //导师
                System.Data.DataTable listMs = ViewBag.listMs;
                if (listMs.Rows.Count > 0)
                {
                    for (int i = 0; i < listMs.Rows.Count; i++)
                    {
                        var ImgPath = method.DisplayImg(listMs.Rows[i]["DisplayImg"].ToString());
                        var strRealName = listMs.Rows[i]["RealName"].ToString();
                        if (strRealName.Length > 4)
                        {
                            strRealName = strRealName.Substring(0, 4) + "...";
                        }
                        <div class="lb_add_botttom_bott_img">
                            <a href="/YogisModels/Details/@list.Rows[i]["UID"]">
                                <img src="@ImgPath" />
                            </a>
                            <p><a href="/YogisModels/Details/@list.Rows[i]["UID"]">@strRealName</a></p>
                        </div>

                    }
                }
            }
            @*<div class="lb_add_botttom_bott_img">
                <a>
                    <img src="~/Content/Front/images/02000.png" />
                </a>
                <p>随便啦</p>
            </div>*@
           
        </div>

    </div>

</div>
@section Scripts {   
    <script type="text/javascript">
        $("#btnOK").click(function () {
            window.location.href = '/learn/index';
        })
    </script>
}